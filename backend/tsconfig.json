{
    "compilerOptions": {
      "incremental": true,
      "removeComments": true,
      "outDir": "./dist",
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
        "@config/*": ["config/*"],
        "@entities/*":["entities/*"],
        "@middlewares/*": ["middlewares/*"],
        "@routes/*": ["routes/*"],
        "@controllers/*":["controllers/*"],
        "@repository/*": ["repository/*"],
        "@enums": ["types/enums"],
        "@types": ["types/types"],
        "@interfaces/*": ["types/interfaces/*"],
        "@classes": ["types/classes"],
        "@services/*": ["services/*"],
        "@dto/*":["types/dto/*"],
        "@validators/*": ["validators/*"],
        "@utils/*": ["utils/*"],
      },
      "lib": ["dom", "ESNext"],
      "target": "ESNext",
      "module": "CommonJS",
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": ["./config/index.d.ts", "node_modules/@types"]
    },
    "exclude" : [
      "**/**/node_modules",
      "node_modules"
    ]
  }